<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Информация"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/hl1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/alal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цель игры: Победить силы Альянса.

Вы начинаете игру за Гордона Фримена, Разрушаете первые силы альянса, за тем переходите на нового персонажа Алекс, так же разрушаете силы альянса, и заканчиваете игру Джи Меном.
"
        android:fontFamily="@font/alal"
        android:textColor="@color/colorWrite"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hl1"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/hl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:fontFamily="@font/alal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="false"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Версия игры: 0.01alpha"
        android:fontFamily="@font/alal"
        android:textColor="@color/colorWrite"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hl"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/hl2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"/>


</RelativeLayout>